<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <!-- When deploying the service library project, the content of the config file must be added to the host's 
  app.config file. System.Configuration does not support config files for libraries. -->
  <system.serviceModel>
    <bindings>
      <wsDualHttpBinding>
        <binding name="WSDualHttpBinding_IMDB" />
        <binding name="WSDualHttpBinding_ISDB" />
        <binding name="WSDualHttpBinding_ICDB" />
      </wsDualHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:8733/Design_Time_Addresses/MainDataBase/CMDB/"
        binding="wsDualHttpBinding" bindingConfiguration="WSDualHttpBinding_IMDB"
        contract="ServiceReferenceMDB.IMDB" name="WSDualHttpBinding_IMDB">
        <identity>
          <dns value="localhost" />
        </identity>
      </endpoint>
      <endpoint address="http://localhost:8733/Design_Time_Addresses/SubTDataBase/CSDB"
        binding="wsDualHttpBinding" bindingConfiguration="WSDualHttpBinding_ISDB"
        contract="ServiceReferenceSDB.ISDB" name="WSDualHttpBinding_ISDB">
        <identity>
          <dns value="localhost" />
        </identity>
      </endpoint>
      <endpoint address="http://localhost:8733/Design_Time_Addresses/ChangeableDataBase/CCDB/"
        binding="wsDualHttpBinding" bindingConfiguration="WSDualHttpBinding_ICDB"
        contract="ServiceReferenceCDB.ICDB" name="WSDualHttpBinding_ICDB">
        <identity>
          <dns value="localhost" />
        </identity>
      </endpoint>
    </client>
    <services>
      <service name="DatabaseHUB.CDBHUB">
        <endpoint address="" binding="wsDualHttpBinding" bindingConfiguration=""
          contract="DatabaseHUB.IDBHUB">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/DatabaseHUB/CDatabaseHUB/" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- To avoid disclosing metadata information, 
          set the values below to false before deployment -->
          <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
          <!-- To receive exception details in faults for debugging purposes, 
          set the value below to true.  Set to false before deployment 
          to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

</configuration>
